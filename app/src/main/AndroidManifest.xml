            ></activity>
        <activity
            android:name="com.itheima.android50.taransitions.ExplodeActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:name="com.itheima.android50.taransitions.FadeActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:name="com.itheima.android50.taransitions.SlideActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.itheima.android50.taransitions.ShareActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:theme="@style/WidgetTheme"
            android:name="com.itheima.android50.widget.WidgetActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>
